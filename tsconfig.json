{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "noErrorTruncation": true,
    "typeRoots": ["./@types", "./node_modules/@types", "./index.d.ts"],
    "paths": {
      "@core/*": ["core/*"],
      "@infra/*": ["infra/*"],
      "@http/*": ["http/*"],
      "@db/*": ["db/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
